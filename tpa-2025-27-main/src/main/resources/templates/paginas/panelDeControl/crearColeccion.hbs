<link rel="stylesheet" href="/css/form.css">

{{#partial "breadcrumbs"}}
    <img src="https://cdn-icons-png.flaticon.com/512/2985/2985179.png">

    <a href="/panelDeControl/colecciones/nueva">
        Crear coleccion
    </a>

{{/partial}}

{{#partial "seccion"}}
    <section class="contenedor-form" style="overflow-y: auto;">
        <div class="panel " STYLE="padding: 0; box-shadow: 0 0">
            <h2 style="width: 70%">Crear una coleccion</h2>
            <form class="form crear-coleccion" style="width: 100%; height: 100%" hx-post="/colecciones" hx-target="#error-crear-coleccion">

                <label for="titulo">Titulo</label>
                <input id="titulo" name="titulo" type="text" placeholder="Elija un titulo">

                <label for="descripcion">Descripcion</label>
                <input  id="descripcion" name="descripcion" type="text" class="largo" placeholder="Descripción de la colección"/>

                <label>Criterio de Pertenencia</label>
                <div class="contenedor-doble">
                    <div>
                        <label for="categoria" style="border-bottom: none">Categoria</label>
                        <input id="categoria" name="categoria" style="width: fit-content" type="text" placeholder="Categoría"/>
                    </div>

                    <div>
                        <label for="fecha-desde"  style="border-bottom: none">Desde</label>
                        <input id="fecha-desde" name="fechaAnterior" style="width: fit-content" type="date" placeholder="Fecha anterior"/>
                    </div>

                    <div>
                        <label for="fecha-hasta"  style="border-bottom: none">Hasta</label>
                        <input id="fecha-hasta" name="fechaPosterior" style="width: fit-content" type="date" placeholder="Fecha porterior"/>
                    </div>
                </div>

                <label >Fuentes</label>
                <div class="contenedor lateral fuentes">
                    {{> templates/paginas/panelDeControl/fuentes}}
                </div>



                <label for="consenso">Criterio de Consenso</label>
                <select id="consenso" name="consenso">
                    <option value="sinConsenso" selected>Sin Consenso</option>
                    <option value="absoluto">Absoluto</option>
                    <option value="mayoriaSimple">Mayoría Simple</option>
                    <option value="multiplesMenciones">Multiples Menciones</option>
                </select>

                <span id="error-crear-coleccion" class="contenedor-mensaje-error"></span>

                <button class="boton subir" type="submit">Subir</button>

            </form>
        </div>
    </section>
{{/partial}}

{{> templates/paginas/panelDeControl/panelDeControlLayout}}