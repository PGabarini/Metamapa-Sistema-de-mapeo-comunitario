{{#partial "dependencias"}}
    <link rel="stylesheet" href="/css/form.css">
{{/partial}}

{{#partial "contenido"}}
    <section class="contenedor-form">
        <div class="panel">

            <div class="breadcrumbs">

                <a href="/">
                    Inicio
                </a>

                <img src="https://cdn-icons-png.flaticon.com/512/2985/2985179.png ">

                <a href="/usuarios/nuevo">
                    Registrarse
                </a>

            </div>

            <div class="contenedor-titulo-volver">

                <div class="contenedor-titulo izq">
                </div>

                <h2>Registrarse</h2>

                <div class="contenedor-titulo der">
                    <button class="boton-secundario relleno">volver</button>
                </div>
            </div>
            <form class="form" id="signup" hx-post="/usuario" hx-target="#error-registrarse">

                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre">

                <label for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido">

                <label for="fechaDeNacimiento">Fecha de nacimiento</label>
                <input type="date" name="fechaDeNacimiento" id="fechaDeNacimiento">

                <label for="nombreDeUsuario">Nombre de usuario</label>
                <input type="text" name="nombreDeUsuario" id="nombreDeUsuario" placeholder="Ingrese su nombre de usuario">

                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Ingrese su contraseña">

                <span id="error-registrarse" class="contenedor-mensaje-error"></span>

                <button class="boton principal" type="submit">Crear Cuenta</button>

            </form>
        </div>
    </section>
{{/partial}}

{{> templates/layout}}